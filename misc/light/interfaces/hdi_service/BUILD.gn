import("//build/ohos.gni")
import("//drivers/adapter/uhdf2/uhdf.gni")

ohos_shared_library("liblight_interface_service") {
  include_dirs = [
    "//drivers/adapter/uhdf2/include/hdi",
    "//foundation/communication/ipc/interfaces/innerkits/ipc_core/include",
    "//drivers/peripheral/misc/light/interfaces/include/",
  ]
  sources = [ "light_interface_service.cpp" ]

  deps = [
    "//drivers/adapter/uhdf2/utils:libhdf_utils",
    "//drivers/peripheral/misc/light/hal:hdi_light",
    "//drivers/peripheral/misc/light/interfaces/light/v1_0:liblight_stub",
    "//utils/native/base:utils",
  ]

  if (is_standard_system) {
    external_deps = [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps = [ "hilog:libhilog" ]
  }

  subsystem_name = "hdf"
  part_name = "hdf"
}

ohos_shared_library("liblight_driver") {
  include_dirs = [
    "//drivers/adapter/uhdf2/include/hdi",
    "//foundation/communication/ipc/interfaces/innerkits/ipc_core/include",
    "//drivers/peripheral/misc/light/interfaces/include/",
  ]
  sources = [ "light_interface_driver.cpp" ]

  deps = [
    "//drivers/adapter/uhdf2/utils:libhdf_utils",
    "//drivers/peripheral/misc/light/hal:hdi_light",
    "//drivers/peripheral/misc/light/interfaces/light/v1_0:liblight_stub",
    "//utils/native/base:utils",
  ]

  if (is_standard_system) {
    external_deps = [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps = [ "hilog:libhilog" ]
  }

  subsystem_name = "hdf"
  part_name = "hdf"
}

group("hdf_light_service") {
  if (target_cpu == "arm") {
    deps = [
      ":liblight_driver",
      ":liblight_interface_service",
    ]
  }
}
