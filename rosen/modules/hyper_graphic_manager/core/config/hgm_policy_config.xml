<HgmConfig version="1.0" xmlns:xi="http://www.w3.org/2001/XInclude">
    <!-- enable or disable hgm -->
    <Param name="general_config_enable" value="1"/>

    <!-- defalut refreshmode given to settings application -->
    <Param name="default_refreshrate_mode" value="3"/>

    <!-- stategies to be applied for scenario -->
    <Params name="detailed_strategies">
        <Strat name="1" isDynamic="0" min="120" max="120"/>
        <Strat name="2" isDynamic="0" min="90" max="90"/>
        <Strat name="3" isDynamic="0" min="60" max="60"/>
        <Strat name="5" isDynamic="1" min="1" max="120"/>
        <Strat name="6" isDynamic="1" min="1" max="90"/>
        <Strat name="7" isDynamic="1" min="1" max="60"/>
        <Strat name="21" isDynamic="1" min="90" max="120"/>
        <Strat name="31" isDynamic="1" min="60" max="120"/>
        <Strat name="32" isDynamic="1" min="60" max="90"/>
    </Params>

    <!-- stategies for setting application -->
    <Params name="customer_setting_config">
        <Setting name="-1" value="5"/><!-- auto refreshrate, range from 1hz to 120hz -->
        <Setting name="1" value="3"/><!-- low refreshrate 60hz locked -->
        <Setting name="2" value="2"/><!-- mid refreshrate 90hz locked -->
        <Setting name="3" value="1"/><!-- high refreshrate 120hz locked -->
    </Params>

    <!-- stategies for LTPO -->
    <Params name="LTPO_config">
        <Setting name="switch" value="0"/>
        <Setting name="maxTE" value="360"/>
        <Setting name="alignRate" value="120"/>
        <Setting name="pipelineOffsetNum" value="8"/>
    </Params>

    <!-- bundle name black_list to be applied on mode 2 -->
    <Params name="bundle_name_black_list" value="2">
        <Setting name="blackBundle2"/>
        <Setting name="blackBundle2"/>
    </Params>

    <!-- stategies for animation, need to review later -->
    <Params name="animation_dynamic_settings">
        <Setting name="animation_zoom" value="21"/>
        <Setting name="animation_trans" value="21"/>
        <Setting name="animation_ui" value="21"/>
        <Setting name="animation_others" value="21"/>
    </Params>

    <Params name="property_animation_dynamic_settings">
        <DynamicSettings name="translate">
            <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
        </DynamicSettings>
        <DynamicSettings name="scale">
            <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
        </DynamicSettings>
        <DynamicSettings name="rotation">
            <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
        </DynamicSettings>
    </Params>

    <Params name="ace_scene_dynamic_settings">
        <DynamicSettings name="refresh_drag_scene">
            <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
        </DynamicSettings>
        <DynamicSettings name="swiper">
            <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
        </DynamicSettings>
        <DynamicSettings name="tabs">
            <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
        </DynamicSettings>
    </Params>
</HgmConfig>