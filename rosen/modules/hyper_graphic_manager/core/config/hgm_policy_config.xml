<HgmConfig version="1.0" xmlns:xi="http://www.w3.org/2001/XInclude">
    <!-- defalut refreshmode given to settings application -->
    <Param name="default_refreshrate_mode" value="2"/>

    <Params name="refreshRate_4settings">
        <Setting name="-1" value="1"/>
        <Setting name="60" value="1"/>
        <Setting name="90" value="1"/>
        <Setting name="120" value="1"/>
    </Params>

    <Params name="refreshRate_strategy_config">
        <Strategy name="1" min="30" max="30" dynamicMode="0"/>
        <Strategy name="2" min="30" max="120" dynamicMode="0"/>
        <Strategy name="3" min="30" max="120" dynamicMode="1"/>
        <Strategy name="4" min="60" max="60" dynamicMode="0" drawMin="30" drawMax="60"/>
        <Strategy name="5" min="60" max="90" dynamicMode="0" drawMin="30" drawMax="90"/>
        <Strategy name="6" min="60" max="120" dynamicMode="0" drawMin="60" drawMax="60"/>
        <Strategy name="7" min="60" max="90" dynamicMode="1"/>
        <Strategy name="8" min="60" max="120" dynamicMode="1"/>
        <Strategy name="9" min="90" max="90" dynamicMode="0"/>
        <Strategy name="10" min="90" max="120" dynamicMode="0"/>
        <Strategy name="11" min="90" max="120" dynamicMode="1"/>
        <Strategy name="12" min="120" max="120" dynamicMode="0"/>
    </Params>

    <Params name="refreshRate_virtual_display_config" switch="1">
        <Virtual name="VIRTUAL_AXX" strategy="4"/>
        <Virtual name="VIRTUAL_BXX" strategy="9"/>
    </Params>

    <Params name="screen_strategy_config">
        <Strategy name="screen0_LTPS" type="1"/>
        <Strategy name="screen0_LTPO" type="2"/>
        <Strategy name="screen1_LTPS" type="3"/>
        <Strategy name="screen1_LTPO" type="4"/>
    </Params>

    <Params name="screen_config" type="1">
        <Setting id="-1" strategy="2">
        </Setting>
        <Setting id="1" strategy="4">
        </Setting>
        <Setting id="2" strategy="9">
        </Setting>
        <Setting id="3" strategy="12">
            <!-- stategies for LTPO -->
            <Category name="LTPO_config">
                <!-- 1：开，0：关 -->
                <Ltpo name="switch" value="1"/>
                <!-- vsync的最高TE，如ALN上是360HZ -->
                <Ltpo name="maxTE" value="360"/>
                <!-- 当前对齐的帧率，120对应UI RS 固定偏移8.3ms -->
                <Ltpo name="alignRate" value="120"/>
                <!-- RS送显和HWC切换刷新率之间的偏移；
                软件信号和硬件信号在训练的时候基准信号存在一个固定的偏移O=22ms（可配置）-->
                <Ltpo name="pipelineOffsetPulseNum" value="8"/>
            </Category>

            <Category name="scene_list">
                <!-- priority values:
                    1 - VOTER_SCENE > VOTER_XML
                    2 - VOTER_SCENE > VOTER_TOUCH
                    3 - VOTER_SCENE < VOTER_TOUCH
                -->
                <Scene name="SCENE_APP_START_ANIMATION" strategy="12" priority="2"/>
                <Scene name="SCENE_APP_BACK_ANIMATION" strategy="12" priority="1"/>
            </Category>

            <Category name="app_list">
                <App name="com.huawei.camera" strategy="4"/>
                <App name="com.miHoYo.Yuanshen" strategy="4"/>
            </Category>

            <Category name="animation_dynamic_settings">
                <DynamicSettings name="translate">
                    <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
                </DynamicSettings>
                <DynamicSettings name="scale">
                    <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
                </DynamicSettings>
                <DynamicSettings name="rotation">
                    <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
                </DynamicSettings>
            </Category>

            <Category name="ace_scene_dynamic_settings">
                <DynamicSettings name="refresh">
                    <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
                </DynamicSettings>
                <DynamicSettings name="swiper">
                    <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
                </DynamicSettings>
                <DynamicSettings name="tabs">
                    <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
                </DynamicSettings>
            </Category>
        </Setting>
    </Params>

    <Params name="screen_config" type="2">
        <Setting id="0" strategy="4">
        </Setting>
        <Setting id="1" strategy="9">
        </Setting>
        <Setting id="2" strategy="12">
        </Setting>
        <Setting id="3" strategy="8">
            <!-- stategies for LTPO -->
            <Category name="LTPO_config">
                <!-- 1：开，0：关 -->
                <Ltpo name="switch" value="1"/>
                <!-- vsync的最高TE，如ALN上是360HZ -->
                <Ltpo name="maxTE" value="360"/>
                <!-- 当前对齐的帧率，120对应UI RS 固定偏移8.3ms -->
                <Ltpo name="alignRate" value="120"/>
                <!-- RS送显和HWC切换刷新率之间的偏移；
                软件信号和硬件信号在训练的时候基准信号存在一个固定的偏移O=22ms（可配置）-->
                <Ltpo name="pipelineOffsetPulseNum" value="8"/>
            </Category>

            <Category name="animation_dynamic_settings">
                <DynamicSettings name="translate">
                    <SpeedThresholds name="1" min="0" max="-1" preferred_fps="120"/>
                </DynamicSettings>
            </Category>
        </Setting>
    </Params>    
</HgmConfig>