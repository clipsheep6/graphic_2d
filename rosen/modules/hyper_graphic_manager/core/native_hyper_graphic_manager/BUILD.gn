import("//build/ohos.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")

## Build libnative_hgm.so

config("native_hgm_config") {
  visibility = [ ":*" ]

  cflags = [
    "-Wall",
    "-Werror",
    "-g3",
  ]
}

config("native_hgm_public_config") {
  include_dirs =
      [ "//foundation/graphic/graphic_2d/interfaces/inner_api/hyper_graphic_manager" ]
}

ohos_shared_library("libnative_hgm") {
  sources = [ "native_hgm.cpp" ]

  include_dirs = [
    "//foundation/graphic/graphic_2d/utils/log",
    "$graphic_2d_root/rosen/modules/hyper_graphic_manager/core/config",
    "$graphic_2d_root/rosen/modules/hyper_graphic_manager/core/utils",
    "$graphic_2d_root/rosen/modules/render_service_base/include/screen_manager",
    "$graphic_2d_root/rosen/modules/render_service_client/core",
  ]

  configs = [ ":native_hgm_config" ]

  public_configs = [
    ":native_hgm_public_config",
    "//commonlibrary/c_utils/base:utils_config",
  ]

  output_extension = "so"

  deps = [ "$graphic_2d_root/rosen/modules/render_service_client:librender_service_client" ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]

  part_name = "graphic_2d"
  subsystem_name = "graphic"
}
## Build libnative_hgm.so
