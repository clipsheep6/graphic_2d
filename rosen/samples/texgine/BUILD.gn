template("ohos_prebuilt_etcs") {
  group_sources = []
  foreach(source, invoker.sources) {
    source_file = get_path_info(source, "file")
    ohos_prebuilt_etc(source_file) {
      source = source
      relative_install_dir = "test_resources"
      part_name = "graphic_standard"
      subsystem_name = "graphic"
    }
    group_sources += [ ":${source_file}" ]
  }
  group(target_name) {
    public_deps = group_sources
  }
}

