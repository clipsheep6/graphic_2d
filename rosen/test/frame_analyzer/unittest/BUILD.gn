import("//build/test.gni")
import("//foundation/arkui/ace_engine/ace_config.gni")

ohos_unittest("frame_analyzer_test") {
  module_out_path = "graphic_2d/rosen/modules/frame_analyzer"

  sources = [
    "frame_collector_test.cpp",
    "frame_painter_test.cpp",
    "frame_saver_test.cpp",
  ]

  deps = [
    "//foundation/graphic/graphic_2d/rosen/modules/frame_analyzer:libframe_analyzer",
    "//foundation/graphic/graphic_2d/utils/test_header:test_header",
  ]
  external_deps = [ "hilog:libhilog" ]

  if (defined(use_new_skia) && use_new_skia) {
    deps += [ "//third_party/skia:skia_ohos" ]
  } else {
    deps += [ "//third_party/flutter/build/skia:ace_skia_ohos" ]
  }

  cflags = [
    "-Wall",
    "-Werror",
    "-g3",
    "-Dprivate=public",
    "-Dprotected=public",
  ]

  part_name = "graphic_2d"
  subsystem_name = "graphic"
}

group("unittest") {
  testonly = true

  deps = [ ":frame_analyzer_test" ]
}
