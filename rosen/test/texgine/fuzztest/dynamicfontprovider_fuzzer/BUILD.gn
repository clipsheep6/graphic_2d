#####################hydra-fuzz###################
import("//build/config/features.gni")
import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")
module_output_path = "graphic_2d/graphic_2d/texgine"

##############################fuzztest##########################################
ohos_fuzztest("DynamicFontProviderFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file =
      "$graphic_2d_root/rosen/test/texgine/fuzztest/dynamicfontprovider_fuzzer"

  sources = [
    "dynamicfontprovider_fuzzer.cpp",
    "get_object.h",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  include_dirs = [
    "$graphic_2d_root/rosen/modules/texgine/export",
    "$graphic_2d_root/rosen/modules/texgine/src",
    "$graphic_2d_root/rosen/test/texgine/fuzztest",
  ]

  deps = [ "$graphic_2d_root/rosen/modules/texgine:libtexgine" ]

  part_name = "graphic_2d"
  subsystem_name = "graphic"
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []

  deps += [
    # deps file
    ":DynamicFontProviderFuzzTest",
  ]
}
