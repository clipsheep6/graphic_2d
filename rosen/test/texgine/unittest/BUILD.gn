import("//build/test.gni")

module_output_path = "graphic_standard/rosen/test/texgine/unittest"

group("unittest") {
  testonly = true

  deps = [ ":texgine_unittest" ]
}

ohos_unittest("texgine_unittest") {
  module_out_path = module_output_path

  sources = [
    "font_feature_test.cpp",
    "measurer_test.cpp",
    "strut_test.cpp",
    "text_converter_test.cpp",
  ]

  include_dirs = [ "//foundation/graphic/graphic_2d/rosen/modules/texgine/src" ]

  deps = [
    "//foundation/graphic/graphic_2d/rosen/modules/texgine:libtexgine",
    "//foundation/graphic/graphic_2d/utils/test_header:test_header",
  ]

  part_name = "graphic_standard"
  subsystem_name = "graphic"
}
