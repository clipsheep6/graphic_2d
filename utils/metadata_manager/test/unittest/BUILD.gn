import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")

module_out_path = "graphic_2d/utils/metadata_manager"

group("unittest") {
  testonly = true
  deps = [ ":MetadataManagerTest" ]
}

## Build metadata_manager_test
ohos_unittest("MetadataManagerTest") {
  module_out_path = module_out_path
  sources = [ "metadata_manager_test.cpp" ]

  visibility = [ ":*" ]
  testonly = true

  include_dirs = [ "//foundation/graphic/graphic_2d/frameworks/surface/include" ]

  public_deps = [
    "//foundation/graphic/graphic_2d/utils/metadata_manager:metadata_manager",
    "$graphic_2d_root/frameworks/surface:surface",
    "//third_party/googletest:gtest_main",
  ]
  external_deps = [
    "c_utils:utils",
    "drivers_interface_display:display_commontype_idl_headers",
    "hilog:libhilog",
  ]
  subsystem_name = "graphic"
  part_name = "graphic_2d"

  cflags = [
    "-Wall",
    "-Werror",
    "-g3",
    "-Dprivate=public",
    "-Dprotected=public",
  ]
}
